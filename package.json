{
  "name": "qa-playwright-ts",
  "version": "1.0.0",
  "description": "Playwright + TypeScript E2E/API tests with CI summary and HTML report",
  "license": "ISC",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "playwright test",
    "ui": "playwright test --ui",
    "headed": "playwright test --project=chromium --headed",
    "report": "playwright show-report",
    "smoke": "playwright test --grep @smoke",
    "regression": "playwright test --grep @regression",

    "test:ci": "playwright test --reporter=list",
    "smoke:ci": "playwright test --grep @smoke --reporter=list",
    "regression:ci": "playwright test --grep @regression --reporter=list",

    "browsers:install": "playwright install",
    "browsers:install:ci": "playwright install --with-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3"
  },
  "dependencies": {
    "playwright": "^1.56.1",
    "playwright-core": "^1.56.1",
    "undici-types": "^7.16.0"
  },
  "directories": {
    "test": "tests"
  }
}
